    .title = Λήψεις
downloads-panel =
    .aria-label = Λήψεις

##

downloads-cmd-pause =
    .label = Παύση
    .accesskey = Π
downloads-cmd-resume =
    .label = Συνέχεια
    .accesskey = ν
downloads-cmd-cancel =
    .tooltiptext = Ακύρωση
downloads-cmd-cancel-panel =
    .aria-label = Ακύρωση
# This message is only displayed on Windows and Linux devices
downloads-cmd-show =
    .label = Άνοιγμα φακέλου λήψης
    .tooltiptext = { downloads-cmd-show.label }
    .accesskey = φ
